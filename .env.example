# Application Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Secret key for session encryption and CSRF protection
# Generate with: python -c "import os; print(os.urandom(32).hex())"
APP_SECRET=

# REQUIRED: Path to SQLite database file
# Example: pyntry.db or /var/lib/pyntry/pyntry.db
DB_PATH=pyntry.db

# REQUIRED: Product API endpoint URL
# {BARCODE} will be replaced with actual barcode
PRODUCT_API_URL=https://world.openfoodfacts.org/api/v2/product/{BARCODE}

# REQUIRED: Contact email for API requests (required by OpenFoodFacts API)
CONTACT_EMAIL=

# Flask debug mode (MUST be False in production)
# WARNING: Never set this to True in production!
FLASK_DEBUG=False

# SECURITY NOTES:
# 1. Keep this file secret - never commit it to version control
# 2. Use strong, random values for APP_SECRET
# 3. Set proper file permissions: chmod 600 .env
# 4. Regularly rotate APP_SECRET (invalidates existing sessions)
# 5. In production, ensure FLASK_DEBUG=False

